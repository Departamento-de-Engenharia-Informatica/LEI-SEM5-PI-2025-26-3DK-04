@startuml
!include https://raw.githubusercontent.com/plantuml-stdlib/C4-PlantUML/master/C4_Context.puml

title Level 1 - Logical View

' ==== Actors ====
interface admin  as "Administrator UI"
interface agent   as "Shipping Agent Representative UI"
interface officer as "Port Authority Officer UI"
interface operator as "Logistics Operator UI"

' ==== System ====
System(pms, "Port Management System")

' ==== API Interface ====
interface "API" as apiIF
interface "IAM" as iamIF
interface "SYSTEM" as sysIF

' ==== Relationships ====
Rel(admin,   pms, "")
Rel(agent,   pms, "")
Rel(officer, pms, "")
Rel(operator,pms, "")
Rel(pms, sysIF, "")

pms -down-( apiIF
pms -down-( iamIF
iamIF -up-( sysIF


@enduml